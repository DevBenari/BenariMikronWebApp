@{
    ViewBag.Title = "Hapus Dokter";
    Layout = "~/Views/Shared/_TopNavbarHealthManagementDoctor.cshtml";
    var photoPath = "~/FotoDokter/" + (Model.DoctorPhotoPath ?? "dokter.jpg");
}

@model DetailDoctorViewModel

<div class="card card-orange">
    <div class="card-header">
        <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
    </div>


    <form enctype="multipart/form-data" asp-controller="Doctor" asp-action="DeleteDoctor" method="post" class="form-horizontal">
        <div class="card-body">
            <h4>Yakin hapus data ini?</h4>
            <hr />
            <input hidden asp-for="DoctorId" />
            <input hidden asp-for="DoctorPhotoPath" />

            <div class="post">
                <div class="user-block">
                    <img class="img-circle img-bordered-sm" src="@photoPath" asp-append-version="true" alt="user image">
                    <span class="username">
                        <a href="#">@Html.DisplayFor(model => model.NamaLengkap)</a>
                    </span>
                    <span class="description">@Html.DisplayFor(model => model.KodeDokter)</span>
                </div>
                <!-- /.user-block -->
            </div>
        </div>

        <div class="card-footer">
            @*<form asp-action="DeleteDoctor" method="post">*@            
            <a class="btn btn-default" asp-action="Index" asp-controller="Doctor" asp-area="HealthManagement">Batal</a>
            <button type="submit" class="btn btn-danger float-left fw-bold"><div style="color:#ffffff">Hapus</div></button>
            @*</form>*@
        </div>
    </form>    
</div>
