@{
    ViewData["Title"] = "Daftar Jadwal Dokter Hari Ini";
    Layout = "~/Views/Shared/_TopNavbarHealthManagementDoctor.cshtml";
}

@using BenariMikronWebApp.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@using BenariMikronWebApp.Areas.HealthManagement.Models;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model IEnumerable<ScheduleToday>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-orange">
                <div class="card-header">
                    <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form enctype="multipart/form-data" asp-controller="ScheduleToday" asp-action="Index" method="post" class="form-horizontal">
                        <div class="row">
                            <div class="col-md-1">
                                <div class="form-group">
                                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Administrator") || signInManager.IsSignedIn(User) && User.IsInRole("TambahShceduleBaru"))
                                    {
                                        <a class="btn bg-orange" asp-action="CreateScheduleToday" asp-controller="ScheduleToday" asp-area="HealthManagement">
                                            <div style="color:#ffffff">Tambah</div>
                                        </a>
                                    }
                                </div>
                            </div>
                            <div class="col-md-3">
                                <select name="department" asp-items="@ViewBag.Department" class="form-control select2bs4" style="width: 100%;">
                                    <option value="" hidden disabled selected>--Pilih Departemen--</option>
                                </select>
                                <span name="department" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group date" id="tanggalawalpencarian" data-target-input="nearest">
                                        <div class="input-group-append" data-target="#tanggalawalpencarian" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                        <input name="tanggalawalpencarian" type="text" class="form-control datetimepicker-input" placeholder="Tanggal Awal Pencarian..." />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                        <div class="input-group date" id="tanggalakhirpencarian" data-target-input="nearest">
                                            <div class="input-group-append" data-target="#tanggalakhirpencarian" data-toggle="datetimepicker">
                                                <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                            </div>
                                            <input name="tanggalakhirpencarian" type="text" class="form-control datetimepicker-input" placeholder="Tanggal Akhir Pencarian..." />
                                            <button type="submit" class="btn btn-default">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </div>                                        
                                    </div>
                                </div>
                            </div>
                            @*<div class="form-group col-md-3">
                                <div class="form-group">
                                    <select class="form-control select2" style="width: 100%;" id="daterange-btn">
                                        <option value="" hidden disabled selected>Pencarian Berdasarkan Waktu</option>
                                        <option value="0">Semua Waktu</option>
                                        <option value="30">30 Hari (1 Bulan)</option>
                                        <option value="60">60 Hari (2 Bulan)</option>
                                        <option value="90">90 Hari (3 Bulan)</option>
                                        <option value="120">120 Hari (4 Bulan)</option>
                                    </select>
                                </div>
                            </div>*@
                        </div>
                    </form>                    

                    <div class="card-body table-responsive p-0">
                        <table id="tblPendaftaranPasienBaru" class="table table-hover table-head-fixed text-nowrap">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Nama Dokter</th>
                                    <th>Departemen</th>
                                    <th>Hari</th>
                                    <th>Tanggal Praktek</th>
                                    <th>Jam Praktek</th>
                                    <th>Pagi/Sore</th>
                                    <th>Ruangan</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var schedule in Model)
                                {
                                    <tr data-href="@Url.Action("DetailScheduleToday", "ScheduleToday", new {id=schedule.ScheduleTodayId})">
                                        <td style="vertical-align:middle"></td>
                                       <td style="vertical-align:middle">@schedule.Doctor.NamaLengkap</td>
                                        <td style="vertical-align:middle">@schedule.DoctorDepartment.NamaDepartemen</td>
                                        <td style="vertical-align:middle">@schedule.Day.NamaHari</td>
                                        <td style="vertical-align:middle">@schedule.TanggalPraktek.ToString("dd MMMM yyyy")</td>
                                        <td style="vertical-align:middle">@schedule.JamMulai - @schedule.JamSelesai</td>
                                        <td style="vertical-align:middle">@schedule.PagiSore</td>
                                        <td style="vertical-align:middle">@schedule.Ruangan</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.card-body -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Berhasil", '@TempData["SuccessMessage"]', "success");
                        };
                    </script>
                }
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts{
    <script src="~/js/serverpendaftaran.js"></script>
    <style>
        tr[data-href] {
            cursor: pointer;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");

            rows.forEach(row => {
                row.addEventListener("click", () => {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>

    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })

            $('#tanggalawalpencarian').datetimepicker({
                format: 'DD MMMM YYYY'
            })

            $('#tanggalakhirpencarian').datetimepicker({
                format: 'DD MMMM YYYY'
            })
        })
    </script>

}