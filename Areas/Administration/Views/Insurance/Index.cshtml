@{
    ViewData["Title"] = "Master Data Asuransi";
    Layout = "~/Views/Shared/_TopNavbarAdministration.cshtml";
}

@using BenariMikronWebApp.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@using BenariMikronWebApp.Areas.Administration.Models;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model IEnumerable<Insurance>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card card-orange">
                <div class="card-header">
                    <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">                    
                    <div class="row">                        
                        <div class="col-md-1">
                            <div class="form-group">
                                @if (signInManager.IsSignedIn(User) && User.IsInRole("Administrator") || signInManager.IsSignedIn(User) && User.IsInRole("TambahPasienBaru"))
                                {
                                    <a class="btn bg-orange" asp-action="CreateInsurance" asp-controller="Insurance" asp-area="Administration">
                                        <div style="color:#ffffff">Tambah</div>
                                    </a>
                                }
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group date" id="dateRange" data-target-input="nearest">
                                    <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate" placeholder="Tanggal Awal Pencarian..."/>
                                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                    <input type="text" class="form-control datetimepicker-input" data-target="#reservationdate" placeholder="Tanggal Akhir Pencarian..." />
                                    <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        <button type="submit" class="btn btn-default">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group col-md-5">
                            <div class="form-group">
                                <select class="form-control select2" style="width: 100%;" id="daterange-btn">
                                    <option value="" hidden disabled selected>Pencarian Berdasarkan Waktu</option>
                                    <option value="0">Semua Waktu</option>
                                    <option value="30">30 Hari (1 Bulan)</option>
                                    <option value="60">60 Hari (2 Bulan)</option>
                                    <option value="90">90 Hari (3 Bulan)</option>
                                    <option value="120">120 Hari (4 Bulan)</option>
                                </select>
                            </div>
                        </div>                        
                    </div>

                    <div class="card-body table-responsive p-0">
                        <table id="tblPendaftaranPasienBaru" class="table table-hover table-head-fixed text-nowrap">
                            <thead>
                                <tr style="text-align:center">
                                    <th>No</th>
                                    <th>Kode Penjamin</th>
                                    <th>Mulai Kerjasama</th>
                                    <th>Akhir Kerjasama</th>                                    
                                    <th>Tipe Perusahaan</th>
                                    <th>Nama Perusahaan</th>
                                    <th>Alamat</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody style="text-align:center;">
                                @foreach (var asuransi in Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@asuransi.KodeAsuransi</td>
                                        <td>@asuransi.MulaiKerjasama</td>
                                        <td>@asuransi.AkhirKerjasama</td>                                        
                                        <td>@asuransi.TipePerusahaan</td>
                                        <td>@asuransi.NamaPerusahaan</td>
                                        <td>@asuransi.Alamat</td>
                                        <td>@asuransi.Status</td>
                                        @*<td>
                                            <a asp-action="DetailPrincipal" asp-controller="Penjamin" asp-route-id="@penjamin.Id" class="btn bg-orange"><i class="ion-eye" style="color:white"></i></a>
                                            <a asp-action="EditPrincipal" asp-controller="Penjamin" asp-route-id="@penjamin.Id" class="btn bg-orange"><i class="ion-edit"></i></a>
                                            <a asp-action="DeletePrincipal" asp-controller="Penjamin" asp-route-id="@penjamin.Id" class="btn bg-orange"><i class="ion-trash-b"></i></a>
                                        </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.card-body -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            swal("Berhasil", '@TempData["SuccessMessage"]', "success");
                        };
                    </script>
                }
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
@section Scripts{
    <script src="~/js/serverpendaftaran.js"></script>


}